<Window x:Class="Diplom_Havaev.customerChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom_Havaev"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="ИП ХАВАЕВ" Height="200" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ComboBox Grid.Row="0" Width="270" Height="38" x:Name="cmbClients" materialDesign:HintAssist.Hint="Выберите клиента"/>
        <Button Grid.Row="2" Width="200" Height="35"
        Content="Выбрать" Style="{StaticResource MaterialDesignRaisedSecondaryButton}" x:Name="btnChoice" Click="btnChoice_Click"/>
    </Grid>
</Window>
